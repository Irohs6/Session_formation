{% extends 'base.html.twig' %}

{% block title %}Liste des modules{% endblock %}

{% block body %}

<div class="container">
   <h1>Liste des Modules pour la categorie {{ category }} </h1>
  
  
    
   
    <ul>
        {% for module in modules %}
            <li>
                {{module}}
                <a class="btn btn-warning" href="{{ path('edit_module',{'id': module.id}) }}">Edit</a> 
            </li>
        {% endfor %}
            
            <a class="btn btn-warning" href="{{ path('new_module',{'idCategory': category.id}) }}">Ajouter</a> 
    </ul>
    
</div>
{% endblock %}