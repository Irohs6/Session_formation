{% extends 'base.html.twig' %}

{% block title %}Détail d'une session{% endblock %}

{% block body %}

<div class="example-wrapper">

    <h1>Liste des sessions pour cet formation {{formation}}</h1>

        <table id="table">
            <tr>
                <td>Intitule</td>
                <td>Date de début</td>
                <td>Date de fin</td>
                <td>Nb de place totale</td>
                <td>Nb de place restante</td>
                <td>Détail du programme</td>
            </tr>
        {% for session in formation.sessions %}
            <tr>
                <td>{{session}}</td>
                <td>{{session.dateDebut | date('d/m/Y')}}</td>
                <td>{{session.dateFin | date('d/m/Y')}}</td>
                <td>{{session.nbPlaceTotal}}</td>
                <td>{{ session.nbPlaceTotal - session.stagiaires|length }}</td>
                <td><a href="{{ path('app_detailProgramme', {'id': session.id})}}"><img src="../../public/img/detail_programme.jpg" alt="Détail du programmes"></a></td>
             
            </tr> 
                   
        {% endfor %}
    </table>
   

</div>
{% endblock %}